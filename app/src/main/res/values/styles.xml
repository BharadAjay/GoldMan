<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green600</item>
        <item name="colorOnPrimary">@color/green100</item>
        <item name="colorPrimaryContainer">@color/green200</item>
        <item name="colorOnPrimaryContainer">@color/green900</item>
        <item name="colorSecondary">@color/green100</item>
        <item name="colorSecondaryContainer">@color/green200</item>
        <item name="colorOnSecondaryContainer">@color/green800</item>
        <item name="colorOnSurface">@color/green700</item>
        <item name="colorSurfaceVariant">@color/green100</item>
        <item name="colorOutline">@color/green800</item>

        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Edittext_Rounded_background">
        <item name="android:background">@drawable/rounded_white_edittext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Edittext_Rounded_background_small">
        <item name="android:background">@drawable/rounded_white_edittext</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="title_text_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UdharEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/spartan_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_18sdp</item>
        <item name="cornerSizeTopRight">@dimen/_18sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_18sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_18sdp</item>
    </style>

    <style name="CustomChipStyle" parent="@style/Widget.Material3.Chip.Filter" />
</resources>