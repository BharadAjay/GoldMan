<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/gallery"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/spartan_semibold"
                android:gravity="center_vertical"
                android:text="Sale"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imgBtnPrinter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/imgBtnEditBillEntryList"
                android:background="@drawable/ic_printer" />

            <ImageButton
                android:id="@+id/imgBtnEditBillEntryList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/imgBtnDeleteBillEntryList"
                android:background="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/imgBtnDeleteBillEntryList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_delete" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.35"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical"
                android:text="Account Name:"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAccountNamebillentrylist"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.65"
                android:singleLine="true"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical|end"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.35"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical"
                android:text="Account Number:"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAccountNumberbillentrylist"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.65"
                android:singleLine="true"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical|end"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.35"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical"
                android:text="Created at:"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDatebillentrylist"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.65"
                android:singleLine="true"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center_vertical|end"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>